# Utilities
alias cl='clear'
alias v='lvim'
alias nv='nvim'
alias ls='ls --color=auto'
alias ll='ls -l'
alias la='ls -la'
alias denowatch='deno run --allow-all --watch'
alias bench='~/.zsh-bench/zsh-bench'
